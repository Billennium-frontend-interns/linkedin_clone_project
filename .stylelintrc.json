{
    "extends": [
      "stylelint-config-sass-guidelines"
    ],
    "fix": true,
    "formatter": "verbose",
    "plugins": [
      "stylelint-scss",
      "stylelint-prettier"
    ],
    "rules": {
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true,
      "max-nesting-depth": 5,
      "resolveNestedSelectors": true,
      "scss/dollar-variable-pattern": "^foo",
      "scss/selector-no-redundant-nesting-selector": true
    },
    "syntax": "scss"
}
